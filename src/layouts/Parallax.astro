---
import { Image } from "astro:assets";
---

<div
  class="relative overflow-clip grid place-content-center bg-[url(/images/space-parallax.png)] bg-fixed bg-cover bg-no-repeat"
>
  <Image
    inferSize={true}
    class="pointer-events-none absolute h-fit w-full object-contain max-h-[60dvh] top-0 left-1/2 -translate-x-1/2 md:-translate-y-1/3 z-10"
    src="/images/sun-parallax.png"
    width={1444}
    height={661}
    alt=""
  />
  <slot />
  <Image
    inferSize={true}
    class="pointer-events-none absolute h-fit w-full object-contain max-h-[60dvh] bottom-0 left-1/2 -translate-x-1/2"
    src="/images/earth-parallax.png"
    width={1867}
    height={836}
    alt=""
  />
</div>
