---
import { Image } from "astro:assets";
---

<div class="relative overflow-clip grid place-content-center">
  <Image
    inferSize={true}
    class="pointer-events-none min-h-screen h-full w-screen object-cover sticky top-0 -z-10 -mb-[100%]"
    src="/images/space-parallax.png"
    width={2520}
    height={1680}
    alt=""
  />
  <Image
    inferSize={true}
    class="pointer-events-none absolute h-full w-fit object-contain max-h-[100dvh] top-0 left-1/2 -translate-x-1/2 -translate-y-1/3 z-10"
    src="/images/sun-parallax.png"
    width={1444}
    height={661}
    alt=""
  />
  <slot />
  <Image
    inferSize={true}
    class="pointer-events-none absolute h-full w-fit object-contain max-h-[60dvh] bottom-0 left-1/2 -translate-x-1/2 z-10"
    src="/images/earth-parallax.png"
    width={1867}
    height={836}
    alt=""
  />
</div>
